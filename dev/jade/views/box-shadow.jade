section(data-view="boxShadow").cf
	h1 Box shadow  
	div( ng-model="preview" class="shadow-preview centered" style=" box-shadow: {{ offsetX }}px {{ offsetY }}px {{ blur }}px {{ spread }}px rgba(0,0,0, {{ opacity }} )")
	form.centered.cf
		div.floated
			label offset-y : <span> {{ offsetY }} </span>
			input( type="range" min="-100" max="100" ng-model="offsetY" )
		div.floated
			label offset-x : <span> {{ offsetX }} </span>
			input( type="range" min="-100" max="100" ng-model="offsetX" )
		div.floated
			label blur : <span> {{ blur }} </span>
			input( type="range" min="0" max="45" ng-model="blur" )
		div.floated
			label opacity : <span> {{ opacity }} </span>
			input( type="range" min="0.1" max="1" step="0.1" ng-model="opacity" )
		div.floated
			label spread : <span> {{ spread }} </span>
			input( type="range" min="-50" max="50" step="1" ng-model="spread" )
		div.floated
			label inset : <span> {{ inset }} </span>
			input( type="checkbox" ng-model="inset" )
		div
			input.result( type="text" placeholder="Result" readonly ng-model="result" )
